<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_hop_replacement_battery" model="ir.actions.act_window">
        <field name="name">Battery Replacements Tracking</field>
        <field name="res_model">hop.replacement.battery</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_hop_replacement_battery_tree" model="ir.ui.view">
        <field name="name">hop.replacement.battery.tree</field>
        <field name="model">hop.replacement.battery</field>
        <field name="arch" type="xml">
            <tree >
                <field name="date"/>
                <field name="party_id" force_save="1" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
                <field name="salebill_id" force_save="1"  invisible ="1"/>
                <field name="sale_bill_name" force_save="1"/>
                <field name="barcode_id" force_save="1" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="view_hop_replacement_battery_kanban" model="ir.ui.view">
    <field name="name">hop.replacement.battery.kanban</field>
    <field name="model">hop.replacement.battery</field>
    <field name="arch" type="xml">
        <kanban  class="o_kanban_small_column">
            <templates>
                <t t-name="kanban-box">
                    <div class="o_kanban_record">
                        <!-- Keep fields available to the template (safe even if invisible) -->
                        <field name="date" invisible="1"/>
                        <field name="party_id" invisible="1"/>
                        <field name="salebill_id" invisible="1"/>
                        <field name="sale_bill_name" invisible="1"/>
                        <field name="barcode_id" invisible="1"/>

                        <div class="o_kanban_primary_left">
                            <div class="o_kanban_title">
                                <field name="party_id"
                                       options="{'no_create_edit': True,'no_create': True,'no_quick_create': True}"/>
                            </div>

                            <div class="mt4">
                                <span class="text-muted">Barcode:</span>
                                <field name="barcode_id"
                                       options="{'no_create_edit': True,'no_create': True,'no_quick_create': True}"/>
                            </div>

                            <div class="mt2" t-if="record.sale_bill_name and record.sale_bill_name.value">
                                <span class="text-muted">Sale Bill:</span>
                                <t t-esc="record.sale_bill_name.value"/>
                            </div>

                            <div class="mt2" t-if="record.salebill_id and record.salebill_id.value">
                                <span class="text-muted">Sale Bill Doc:</span>
                                <field name="salebill_id"
                                       options="{'no_create_edit': True,'no_create': True,'no_quick_create': True}"/>
                            </div>

                            <div class="mt2" t-if="record.date and record.date.value">
                                <span class="text-muted">Date:</span>
                                <t t-esc="record.date.value"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Form View -->
    <record id="view_hop_replacement_battery_form" model="ir.ui.view">
        <field name="name">hop.replacement.battery.form</field>
        <field name="model">hop.replacement.battery</field>
        <field name="arch" type="xml">
            <form string="Battery Replacement" >
                <sheet>
                    <group>
                        <group>
                            <field name="replacement_type" required="1"/>
                            <field name="barcode_id" force_save="1"  options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
                            <field name="party_id" force_save="1"  options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
                        </group>
                        <group>
                             <field name="date"  force_save="1" />
                             <field name="product_id" force_save="1"  />
                             <field name="warranty_end_date"  force_save="1" />
                             <field name="sale_bill_name" force_save="1"/>
                            <field name="salebill_id" force_save="1" invisible="1" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                       <page string="Replacement Details">
    <field name="line_ids" mode="tree,form,kanban">

        <!-- TREE (as given) -->
        <tree editable="bottom" delete="0">
            <field name="date" force_save="1"/>
            <field name="barcode_id" force_save="1"/>
            <field name="replacement_barcode_id" force_save="1"
                   options="{'no_quick_create': True}"
                   attrs="{'column_invisible': [('parent.replacement_type', '=', 'self')]}"/>
            <field name="salebill_id" invisible="1" force_save="1"/>
            <field name="sale_bill_name" force_save="1"/>
            <field name="product_id" force_save="1"/>
        </tree>

        <!-- FORM (inline) -->
        <form>
            <group>
                <field name="date" force_save="1"/>
                <field name="barcode_id" force_save="1"/>
                <!-- Use 'invisible' (not column_invisible) in form -->
                <field name="replacement_barcode_id" force_save="1"
                       options="{'no_quick_create': True}"
                       attrs="{'invisible': [('parent.replacement_type', '=', 'self')]}"/>
                <field name="salebill_id" invisible="1" force_save="1"/>
                <field name="sale_bill_name" force_save="1"/>
                <field name="product_id" force_save="1"/>
            </group>
        </form>

        <!-- KANBAN (inline) -->
        <kanban class="o_kanban_small_column">
            <templates>
                <t t-name="kanban-box">
                    <div class="o_kanban_record">
                        <!-- Keep fields present so attrs/rendering work -->
                        <field name="date" invisible="1"/>
                        <field name="barcode_id" invisible="1"/>
                        <field name="replacement_barcode_id" invisible="1"/>
                        <field name="salebill_id" invisible="1"/>
                        <field name="sale_bill_name" invisible="1"/>
                        <field name="product_id" invisible="1"/>

                        <div class="o_kanban_primary_left">
                            <div class="o_kanban_title">
                                <field name="product_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            </div>

                            <div class="mt4">
                                <span class="text-muted">Barcode:</span>
                                <field name="barcode_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            </div>

                            <!-- Map tree's column_invisible to 'invisible' in kanban -->
                            <div class="mt4">
                                <span class="text-muted">Replacement Barcode:</span>
                                <field name="replacement_barcode_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True}"
                                       attrs="{'invisible': [('parent.replacement_type', '=', 'self')]}"/>
                            </div>

                            <div class="mt4" t-if="record.sale_bill_name and record.sale_bill_name.value">
                                <span class="text-muted">Sale Bill:</span>
                                <t t-esc="record.sale_bill_name.value"/>
                            </div>

                            <div class="mt4" t-if="record.salebill_id and record.salebill_id.value">
                                <span class="text-muted">Sale Bill Doc:</span>
                                <field name="salebill_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            </div>

                            <div class="mt4" t-if="record.date and record.date.value">
                                <span class="text-muted">Date:</span>
                                <t t-esc="record.date.value"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>

    </field>
</page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hop_replacement_battery_search" model="ir.ui.view">
        <field name="name">hop.replacement.battery.search</field>
        <field name="model">hop.replacement.battery</field>
        <field name="arch" type="xml">
            <search>
                <field name="party_id" readonly="1"/>
                <field name="date" readonly="1"/>
                <field name="salebill_id" readonly="1" invisible="1"/>
                 <field name="sale_bill_name" force_save="1"/>
                <field name="barcode_id" readonly="1"/>
                <field name="warranty_end_date" readonly="1"/>
            </search>
        </field>
    </record>

    <!-- Tree View for Replacement Line -->
    <record id="view_hop_replacement_battery_line_tree" model="ir.ui.view">
        <field name="name">hop.replacement.battery.line.tree</field>
        <field name="model">hop.replacement.battery.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="barcode_id"/>
            </tree>
        </field>
    </record>

        <!-- Menu Item -->
    <menuitem id="menu_hop_replacement_battery_root" name="Battery Replacement" sequence="10" web_icon="battery,static/description/img/battery.png" />

    <menuitem id="menu_hop_replacement_battery"
              name="Tracking"
              parent="menu_hop_replacement_battery_root"
              action="action_hop_replacement_battery"
              sequence="2" />

</odoo>
