<odoo>

<record id="view_purchasebill_line_barcode_form" model="ir.ui.view">
        <field name="name">purchasebill.line.barcode.form</field>
        <field name="model">hop.purchasebill.line.barcode</field>
        <field name="arch" type="xml">
            <form string="Purchase Bill Line Barcode">
                <sheet>
                    <group>
                    <group>
                      <field name="product_id"/>
                      <field name="name"/>
                      <field name="stage"/>
                      <button name="update_status" type="object" string="Update Status" class="oe_stat_button" groups="base.group_no_one" icon="fa-"/>
                    </group>
                        <group>
                        <field name="origin"/>
                        <field name="purchase_name"/>
                        <field name="is_manual"  readonly="1"/>
                        <field name="date" force_save="1" invisible="1" />
                        <field name="box_no" readonly="1"/>
                        <field name="purchase_id" force_save="1" groups="base.group_no_one" />
                        <field name="replace_id" force_save="1" groups="base.group_no_one"/>
                        <field name="sale_id" force_save="1" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_purchasebill_line_barcode_tree" model="ir.ui.view">
        <field name="name">purchase.bill.line.barcode.tree</field>
        <field name="model">hop.purchasebill.line.barcode</field>
        <field name="arch" type="xml">
            <tree string="Barcodes" >
                <field name="name" force_save="1" />
                <field name="box_no" readonly="1"/>
                <field name="stage" force_save="1" />
                <field name="product_id" force_save="1"/>
                <field name="origin" force_save="1" />
                <field name="purchase_name" force_save="1" />
                <field name="date" force_save="1" />
                <field name="purchase_id" force_save="1" groups="base.group_no_one" />
                <field name="replace_id" force_save="1" groups="base.group_no_one"/>
                <field name="sale_id" force_save="1" groups="base.group_no_one"/>
            </tree>
        </field>
    </record>
<record id="view_purchasebill_line_barcode_kanban" model="ir.ui.view">
    <field name="name">purchase.bill.line.barcode.kanban</field>
    <field name="model">hop.purchasebill.line.barcode</field>
    <field name="arch" type="xml">
        <kanban default_group_by="stage" class="o_kanban_small_column">
            <templates>
                <t t-name="kanban-box">
                    <div class="o_kanban_record">
                        <!-- keep keys present (used or shown) -->
                        <field name="stage" invisible="1"/>
                        <field name="product_id" invisible="1"/>
                        <field name="purchase_id" invisible="1"/>
                        <field name="replace_id" invisible="1"/>
                        <field name="sale_id" invisible="1"/>
                        <field name="name" invisible="1"/>
                        <field name="origin" invisible="1"/>
                        <field name="purchase_name" invisible="1"/>
                        <field name="box_no" invisible="1"/>
                        <field name="date" invisible="1"/>

                        <div class="o_kanban_primary_left">
                            <div class="o_kanban_title">
                                <!-- Prefer field renderer or guarded t-esc -->
                                <t t-esc="record.name and record.name.value or '-'"/>
                            </div>

                            <!-- Render m2o via <field/> to avoid [1] indexing -->
                            <div class="mt6">
                                <span class="text-muted">Product:</span>
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True, 'no_quick_create': True}"/>
                            </div>

                            <div class="mt2">
                                <span class="text-muted">Box No.:</span>
                                <t t-esc="record.box_no and record.box_no.value or '-'"/>
                            </div>
                            <div class="mt2">
                                <span class="text-muted">Origin:</span>
                                <t t-esc="record.origin and record.origin.value or '-'"/>
                            </div>
                            <div class="mt2">
                                <span class="text-muted">Purchase #:</span>
                                <t t-esc="record.purchase_name and record.purchase_name.value or '-'"/>
                            </div>
                            <div class="mt2" t-if="record.date and record.date.value">
                                <span class="text-muted">Date:</span>
                                <t t-esc="record.date.value"/>
                            </div>

                            <!-- <div class="mt8 grid">
                                <div t-if="record.purchase_id and record.purchase_id.value">
                                    <span class="text-muted">Purchase:</span>
                                    <field name="purchase_id" options="{'no_create_edit': True, 'no_create': True, 'no_quick_create': True}"/>
                                </div>
                                <div t-if="record.replace_id and record.replace_id.value">
                                    <span class="text-muted">Replace:</span>
                                    <field name="replace_id" options="{'no_create_edit': True, 'no_create': True, 'no_quick_create': True}"/>
                                </div>
                                <div t-if="record.sale_id and record.sale_id.value">
                                    <span class="text-muted">Sale:</span>
                                    <field name="sale_id" options="{'no_create_edit': True, 'no_create': True, 'no_quick_create': True}"/>
                                </div>
                            </div> -->
                        </div>

                        <div class="o_kanban_primary_right">
                            <div class="o_kanban_badge">
                                <span>Status</span>
                                <strong><t t-esc="record.stage and record.stage.value or '-'"/></strong>
                            </div>
                            <!-- Optional: object button (uncomment if method exists)
                            <div class="mt8">
                                <button type="object" name="update_status"
                                        class="btn btn-primary btn-sm" groups="base.group_no_one">
                                    Update Status
                                </button>
                            </div>
                            -->
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Search View with Filters and Group By -->
    <record id="view_purchasebill_line_barcode_search" model="ir.ui.view">
        <field name="name">purchase.bill.line.barcode.search</field>
        <field name="model">hop.purchasebill.line.barcode</field>
        <field name="arch" type="xml">
            <search string="Search Barcodes">
                <field name="name"/>
                <field name="stage"/>
                <field name="product_id"/>
                 <field name="date"/>
                <filter name="filter_stage" string="Stage" domain="[('stage', '!=', False)]"/>
                <filter name="filter_product" string="Has Product" domain="[('product_id', '!=', False)]"/>

                <!-- Group By Options -->
                <group expand="0">
                    <filter name="group_by_date" string="Group by Date" context="{'group_by': 'date'}"/>
                    <filter name="group_by_stage" string="Group by Stage" context="{'group_by': 'stage'}"/>
                    <filter name="group_by_product" string="Group by Product" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_origin" string="Group by Origin" context="{'group_by': 'origin'}"/>
                    <filter name="group_by_purchase_name" string="Group by Purchase" context="{'group_by': 'purchase_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_purchasebill_line_barcode" model="ir.actions.act_window">
        <field name="name">Barcodes</field>
        <field name="res_model">hop.purchasebill.line.barcode</field>
        <field name="view_mode">kanban,tree,form,search</field>
         <field name="context">{'default_is_manual':True}</field>
        <field name="search_view_id" ref="view_purchasebill_line_barcode_search"/>
    </record>

    <menuitem id="menu_hop_barcode_main" 
    name="Barcodes" 
    sequence="11" 
    web_icon="battery,static/description/img/barcode.png" />

    <menuitem id="menu_purchasebill_line_barcode_root"
              name="Barcodes"
              parent="battery.menu_hop_barcode_main" 
              action="action_purchasebill_line_barcode"/>
</odoo>